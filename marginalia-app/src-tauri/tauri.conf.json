{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Marginalia",
  "version": "0.1.0",
  "identifier": "com.marginalia.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Marginalia",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: https: asset: http://localhost:*; img-src 'self' data: blob: https: asset: tauri:; connect-src 'self' https: http: ws: wss: asset: tauri:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; font-src 'self' data: https:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**", "$DESKTOP/**", "$DOCUMENT/**", "$DOWNLOAD/**", "/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": ["icons/icon.png"],
    "macOS": {
      "minimumSystemVersion": "12.0",
      "entitlements": null,
      "signingIdentity": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
