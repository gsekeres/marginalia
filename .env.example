# Copy this file to .env and fill in your values

# Claude Code OAuth token (required for summarization)
# Get this by running: claude setup-token
# DO NOT set ANTHROPIC_API_KEY - the CLI will prefer it and fail without API credits
CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-...

# Optional: Email for Unpaywall API (improves rate limits)
UNPAYWALL_EMAIL=your@email.com

# Optional: Semantic Scholar API key (for higher rate limits)
SEMANTIC_SCHOLAR_API_KEY=

# Vault path (defaults to ./vault)
VAULT_PATH=./vault
